// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String               @id @default(uuid())
  username           String               @unique
  email              String               @unique
  password           String?
  salt               String?
  image              String?
  messages           Message[]
  Inbox              Inbox[]
  Inbox_Participants Inbox_Participants[]
}

model Inbox {
  id Int @id @unique @default(autoincrement())

  last_message       String?
  last_sent_user_id  User?                @relation(fields: [userId], references: [id])
  last_message_send  DateTime?
  userId             String?
  Inbox_Participants Inbox_Participants[]
  Message            Message[]
}

model Inbox_Participants {
  id      Int   @id @unique @default(autoincrement())
  user_id User? @relation(fields: [userId], references: [id])

  userId String?

  inbox_uid Inbox? @relation(fields: [inboxId], references: [id])
  inboxId   Int?
}

model Message {
  id         Int      @id @default(autoincrement())
  senderId   String
  sender     User     @relation(fields: [senderId], references: [id])
  text       String
  inbox      Inbox    @relation(fields: [inboxId], references: [id])
  inboxId    Int
  created_at DateTime @default(now())
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
